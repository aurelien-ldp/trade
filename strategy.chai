def update()
{
    var macd = ema(9, 0) - ema(12, 0);
    var macd_p = ema(9, 1) - ema(12, 1);

    if (macd > 0 && macd_p < 0)
    {
        buy(percent_of_money(10));
    }
    else if (macd < 0 && macd_p > 0)
    {
        sell(all);
    }
    else if (rsi(14, 0) >= 20 && rsi(14, 1) < 20)
    {
        buy(percent_of_money(10));
    }
    else if (rsi(14, 0) <= 80 && rsi(14, 1) > 80)
    {
        sell(all);
    }
    else
    {
        wait();
    }
}
